# Environment settings
NODE_ENV=development

# Django settings
DEBUG=True
SECRET_KEY=your_secret_key_here

# API Gateway settings
PORT=4000
HTTPS_PORT=4443
HTTPS_ENABLED=false
JWT_SECRET=HS256_JWT_SECRET_KEY_SHOULD_BE_AT_LEAST_32_CHARS_LONG
FRONTEND_URL=http://localhost:3000

# Session and token settings
SESSION_TTL=86400
SESSION_COOKIE_NAME=healthcare_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
MAX_SESSIONS_PER_USER=5
ROTATE_REFRESH_TOKENS=false

# SSL settings
SSL_KEY_PATH=./api-gateway/ssl/private.key
SSL_CERT_PATH=./api-gateway/ssl/certificate.crt

# Database settings
DATABASE_URL=postgres://postgres:postgres@postgres:5432/healthcare

# Redis settings
REDIS_URL=redis://redis:6379/0

# Email settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@healthcare.com

# SMS settings
SMS_API_KEY=your_sms_api_key

# Service URLs
USER_SERVICE_URL=http://user-service:8000
APPOINTMENT_SERVICE_URL=http://appointment-service:8002
MEDICAL_RECORD_SERVICE_URL=http://medical-record-service:8001
BILLING_SERVICE_URL=http://billing-service:8003
PHARMACY_SERVICE_URL=http://pharmacy-service:8004
LAB_SERVICE_URL=http://laboratory-service:8005
NOTIFICATION_SERVICE_URL=http://notification-service:8006
